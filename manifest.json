{
    "manifest_version": 3,
    "name": "Github events",
    "version": "1.0.22",
    "description": "A Chrome extension that shows GitHub activity events in sidebar and improves several UI details.",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon32.png",
        "128": "img/icon32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://github.com/*",
                "https://github.com/*"
            ],
            "css": [
                "css/core.css"
            ],
            "js": [
                "js/content_script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "webRequest",
        "storage"
    ],
    "action": { 
        "default_title": "Github events",
        "default_icon": "img/icon16.png",
        "default_popup": "options.html"
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html"
    }
}