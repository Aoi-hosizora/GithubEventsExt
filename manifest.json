{
    "manifest_version": 2,
    "name": "GitHub events extension",
    "version": "1.0.8",
    "description": "A Chrome extension that let browser show GitHub activity events.",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon32.png",
        "128": "img/icon32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://github.com/*",
                "https://github.com/*"
            ],
            "css": [
                "css/core.css"
            ],
            "js": [
                "js/content_script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "webRequest",
        "storage"
    ],
    "browser_action": {
        "default_title": "GitHub events extension"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}